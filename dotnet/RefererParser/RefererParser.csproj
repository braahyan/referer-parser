<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <ProjectGuid>{E27751F2-DCFA-4C92-BD14-F8515862FCFA}</ProjectGuid>

    <PackageId>RefererParser</PackageId>
    <PackageVersion>$(VersionSuffix)</PackageVersion>
    <Authors>iPerform Software BV, ThriveHive</Authors>
    <Description>A .NET implementation of the Snowplow referer-parser project</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Add support for NETStandard 2.0</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/propelmarketing/referer-parser</PackageProjectUrl>
    <PackageLicense>http://www.apache.org/licenses/LICENSE-2.0</PackageLicense>
    <PackageTags>RefererParser ReferrerParser Referrer Referer Parser Snowplow</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="YamlDotNet" Version="4.3.1.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Resources\referers.yml" />
  </ItemGroup>

  <Target Name="BeforeBuild">
    <Delete Files="Resources\referers.yml" />
    <Copy SourceFiles="..\..\resources\referers.yml" DestinationFolder="Resources" OverwriteReadOnlyFiles="true" />
  </Target>

  <ItemGroup Condition=" '$(TargetFramework)' != 'netstandard2.0' ">
    <Reference Include="System.Web" />
  </ItemGroup>
</Project>
